extends ../layouts/common

block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(method="POST")
      .form-group.mb-2
        label(for="email") Email 
        input#email.form-control.mt-2(name="email",type="text", value=values ? values.email : "")

      .form-group.mb-2
        label(for="password") Password 
        input#password.form-control.mt-2(name="password",type="password", value=values ? values.password : "")  

      button.btn.btn-primary Login 