extends ../layouts/common

block content
    h1 
      span(style="margin-right: 10px") User
      a.btn.btn-primary(href="/users/create") New

    .d-flex.align-items-center 
        form(action="/users/search", method="GET",class="d-flex",style="margin-left: auto;")
          input(type="text",name="q",class="form-control")
          button(class="btn btn-primary",style="margin-left:10px") Search 
    table.table
      tr 
        th Avatar
        th Name 
        th Phone 
        th Actions 
      each user in users
        tr 
          td
            img(src=user.avatar,width="32px")
          td= user.name
          td= user.phone
          td
            a.btn.btn-light(href='/users/' + user.id) View