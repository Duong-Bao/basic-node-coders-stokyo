extends ../layouts/common

block content
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create",method="POST",enctype="multipart/form-data")
      .form-group.mb-2
        label(for="name") Name 
        input#name.form-control.mt-2(name="name",type="text", value=values ? values.name : "")

      .form-group.mb-2
        label(for="phone") Phone 
        input#phone.form-control.mt-2(name="phone",type="text", value=values ? values.phone : "")  
      
      .form-group.mb-2.d-flex.flex-column
        label(for="avatar") Avatar 
        input#avatar.form-control-file.mt-2(name="avatar",type="file") 

      button.btn.btn-primary Create 